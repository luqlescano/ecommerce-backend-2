    <main class="container">
        <section class="row justify-content-center p-5">
            <h1 class="mb-5 text-center">Lista de Productos</h1>
            <div class="row">
                {{#each products}}
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{this.title}}</h5>
                                <p class="card-text">{{this.description}}</p>
                                <p class="card-text"><strong>Precio:</strong> ${{this.price}}</p>
                                <a href="/cart/add/{{this._id}}" class="btn btn-primary">Agregar al carrito</a>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </section>
    </main>